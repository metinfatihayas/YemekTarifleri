<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"



    >

    <ImageView
        android:id="@+id/ivYemekResim"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tvYemekIsim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivYemekResim"
        android:layout_toRightOf="@+id/ivYemekResim"
        android:text="TextView"
        android:textColor="#E91E63"
        android:textSize="18sp"
        android:layout_margin="15dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvYemekIsim"
        android:layout_alignStart="@+id/tvYemekIsim"
        android:layout_alignLeft="@+id/tvYemekIsim"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivYemekResim"
        android:layout_alignStart="@+id/tvYemekIsim"
        android:layout_alignLeft="@+id/tvYemekIsim"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDetayHazirlamaSuresi"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="H.S"
            android:textColor="#E91E63"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvPisirmeSuresi"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="P.S"
            android:textColor="#E91E63"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvKisiSayisi"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kisi"
            android:textColor="#E91E63"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>